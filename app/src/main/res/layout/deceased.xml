<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".deceased">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/r1"
        >
        <ImageView
            android:id="@+id/decimage"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="120dp" />

        <Button
            android:id="@+id/decibutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/decimage"
            android:background="@android:drawable/ic_menu_edit"
             />

        <ImageView
            android:id="@+id/decimage2"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_width="150dp"
            android:layout_height="120dp" />

        <com.github.ybq.android.spinkit.SpinKitView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:id="@+id/spin_kit2"
            style="@style/SpinKitView.Circle"
            android:layout_width="150dp"
            android:layout_height="120dp"
            android:layout_gravity="center"
            app:SpinKit_Color="@color/colorAccent"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r1"
        android:id="@+id/r2"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="@string/named" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/eName"
            android:layout_marginEnd="20dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r2"
        android:id="@+id/r3"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="@string/Age" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/eAge"
            android:layout_marginEnd="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r3"
        android:id="@+id/r4"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="@string/dod" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/eDateDeath"
            android:layout_marginEnd="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r4"
        android:id="@+id/r5"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="@string/description" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/eDescription"
            android:lines="3"
            android:layout_marginEnd="20dp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/r5"
        android:id="@+id/r6"
        android:weightSum="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/t5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_weight="1"
            android:text="@string/Eulogy" />

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/eEulogy"
            android:lines="3"
            android:layout_marginEnd="20dp"
            />

    </LinearLayout>

    <Button
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/save"
        android:layout_below="@+id/r6"
        android:layout_centerHorizontal="true"
        android:text="@string/Save"
        />
    <com.github.ybq.android.spinkit.SpinKitView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginTop="20dp"
        android:id="@+id/spin_kit3"
        style="@style/SpinKitView.Circle"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_below="@+id/r6"
        android:layout_centerHorizontal="true"
        app:SpinKit_Color="@color/colorAccent"
        android:visibility="gone"
        />
</RelativeLayout>